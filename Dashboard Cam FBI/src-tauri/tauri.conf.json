{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "omniscient-surveillance-system",
  "version": "0.1.0",
  "identifier": "com.douglasdsr.dashboard-cam-fbi",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Omniscient Surveillance System (OSS)",
        "width": 1280,
        "height": 720,
        "maximized": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
